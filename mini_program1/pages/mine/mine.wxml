<view class="page mine-container">
<!-- 头像 -->
    <view class="weui-panel">
        <view class="weui-panel__bd">
            <view class="weui-cell">
              <navigator url="" bindtap="uploading" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd head">
                    <image src="/icons/avatar.jpg"></image>
                </view>
              </navigator>
                
              <navigator url="" bindtap="jump" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view class="name">user</view>
                    <view class="uid">0</view>
                </view>
              </navigator>

              <navigator bindtap="scanCode" url="" class="weui-grid" hover-class="weui-grid_active">
                <view class="qrCode">
                    <image src="/icons/qrcode.png" style="margin-right: 16.5px;vertical-align: auto;width:19px; height: 19px;"></image>
                </view>
              </navigator>
            </view>
        </view>
    </view>

<!-- 用户协议及功能等 -->
    <view class="weui-panel">
        <view class="weui-panel__bd">
            <view class="weui-cells weui-cells_after-title">
                <navigator url="" bindtap="mpAlert" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="/icons/deal.png" style="margin-right: 16.5px;vertical-align: auto;width:19px; height: 19px;"></image>
                    </view>
                    <view class="weui-cell__bd" font-weight="bold">用户协议</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
                <navigator url="" bindtap="mpAlert" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="/icons/question.png" style="margin-right: 16px;vertical-align: auto;width:18px; height: 18px;"></image>
                    </view>
                    <view class="weui-cell__bd" font-weight="bold">帮助与反馈</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>

                <navigator url="" bindtap="mpAlert" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="/icons/about.png" style="margin-right: 16px;vertical-align: middle;width:18px; height: 18px;"></image>
                    </view>
                    <view class="weui-cell__bd" font-weight="bold">关于</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
            </view>     
        </view>
    </view>

<!-- 设置 -->
    <view class="weui-panel">
        <view class="weui-cell__hd">
            <view class="weui-panel__bd">
            <view class="weui-cells weui-cells_after-contracts">
            <navigator url="" bindtap="mpAlert" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image src="/icons/settings.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
                    </view>
                    <view class="weui-cell__bd">全局设置</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            </view>
            </view>
        </view>
    </view>
</view>