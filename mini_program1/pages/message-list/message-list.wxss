
.item {
  position: relative;
  border-top: 2rpx solid #eee;
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
}
 
.inner.txt {
  font-family: Monaco;
  width: 100%;
  z-index: 5;
  padding: 0 10rpx;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
 
.inner.del {
  position: absolute;
  width: 400rpx;
  /* height: 148rpx; */
  top: 1rpx;
  right: -60px;
  color: #fff;
  text-align: center;
  line-height: 110rpx;
}
 
.msg {
  position: absolute;
  width: 100%;
  height: 150rpx;
  left: 0;
  top: 0;
  z-index: 100;
  background-color: #fff;
}
 
.delete {
  margin-left: 5px;
  display: inline-block;
  width: 120rpx;
  height: 115rpx;
  background:indianred;
  border-radius: 5px;
}
